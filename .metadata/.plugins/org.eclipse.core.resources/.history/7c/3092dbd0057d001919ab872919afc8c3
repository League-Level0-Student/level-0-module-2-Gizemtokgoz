package random;

import java.util.Random;

import javax.swing.JOptionPane;

public class Validation {
	public static void main(String[] args) {
		
		Random rand = new Random();
		
		int randomChoice = rand.nextInt(5);
		
		System.out.println(randomChoice);

		// 1. Use each value of randomNumber to give the user a random compliment.
		for (int i = 0; i < 5; i++) {
			int randNumber = rand.nextInt(5); 
		if (randNumber == 0) {
		
		} else if (randNumber == 1) {
			JOptionPane.showMessageDialog(null, "You are smart");
		} else if (randNumber == 2) {
			JOptionPane.showMessageDialog(null, "You are nice");
		} else if (randNumber == 3) {
			JOptionPane.showMessageDialog(null, "You are pretty");
		} else if (randNumber == 4) {
			JOptionPane.showMessageDialog(null, "You are talented");
		}
		// 2. Repeat all the code above 10 times
			
		// 3. Find someone to test out your program. They will like it :)
		}
	}
}
